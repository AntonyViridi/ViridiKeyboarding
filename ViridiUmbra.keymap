/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                // ┌─────────────────────────────────────────────┐
                // │ Esc │ 1 │ 2 │ 3 │ 4 │ 5 │ 6 │ 7 │ 8 │ 9 │ 0 │ - │ = │ Back │
                // └─────────────────────────────────────────────┘
                &kp ESC     &kp N1      &kp N2     &kp N3     &kp N4     &kp N5     &kp N6     &kp N7     &kp N8     &kp N9     &kp N0     &kp MINUS   &kp EQUAL   &kp BSPC

                // ┌─────────────────────────────────────────────┐
                // │ Tab │ Й │ Ц │ У │ К │ Е │ Н │ Г │ Ш │ Щ │ З │ Х │ Ъ │  Enter │
                // └─────────────────────────────────────────────┘
                &kp TAB     &kp CYR_YO  &kp CYR_TS &kp CYR_U  &kp CYR_K  &kp CYR_E  &kp CYR_N  &kp CYR_G  &kp CYR_SH &kp CYR_SC &kp CYR_Z  &kp CYR_H  &kp CYR_HARD &kp ENTER

                // ┌─────────────────────────────────────────────┐
                // │ Caps │ Ф │ Ы │ В │ А │ П │ Р │ О │ Л │ Д │ Ж │ Э │ ' │
                // └─────────────────────────────────────────────┘
                &kp CAPS    &kp CYR_F  &kp CYR_Y  &kp CYR_V  &kp CYR_A  &kp CYR_P  &kp CYR_R  &kp CYR_O  &kp CYR_L  &kp CYR_D  &kp CYR_ZH &kp CYR_EE &kp SQT

                // ┌─────────────────────────────────────────────┐
                // │ Shift │ Я │ Ч │ С │ М │ И │ Т │ Ь │ Б │ Ю │ . │ ↑ │ Shift │
                // └─────────────────────────────────────────────┘
                &kp LSHIFT  &kp CYR_YA &kp CYR_CH &kp CYR_S &kp CYR_M &kp CYR_I &kp CYR_T &kp CYR_SOFT &kp CYR_B &kp CYR_YU &kp DOT &kp UP &kp RSHIFT

                // ┌─────────────────────────────────────────────┐
                // │ Ctrl │ Win │ Alt │ Space │ Alt │ ← │ ↓ │ → │
                // └─────────────────────────────────────────────┘
                &kp LCTRL  &kp LGUI  &kp LALT  &kp SPACE  &kp RALT  &kp LEFT  &kp DOWN  &kp RIGHT
            >;
        };

        // Второй слой (например, символы и функции)
        fn_layer {
            bindings = <
                &kp ESC    &kp F1 &kp F2 &kp F3 &kp F4 &kp F5 &kp F6 &kp F7 &kp F8 &kp F9 &kp F10 &kp F11 &kp F12 &kp DEL
                &none &none &none &none &none &none &none &none &none &none &none &none &none &none
                &none &none &none &none &none &none &none &none &none &none &none &none &none
                &none &none &none &none &none &none &none &none &none &none &none &none &none
                &none &none &none &none &none &none &none &none
            >;
        };
    };
};
